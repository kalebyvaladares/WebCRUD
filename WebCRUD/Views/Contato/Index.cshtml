@model List<ContatoModel>

@{
    ViewData["Title"] = "Contatos";
}

<style>
    .tamanho {
        width: 100px;
       margin-bottom: 5px
    }
</style>

<div class="text-center">
    <h2 class="display-4">Lista de contatos</h2>
</div>
<br />

<div>
    <a class="btn btn-outline-success tamanho" role="button" asp-controller="Contato" asp-action="Criar">Criar novo</a>
</div>

<div class="text-center">
    <table class="table table-striped">
        <thead>
            <tr class="table-primary">
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Telefone</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(ContatoModel contato in Model)
                {
                    <tr class="table-primary">
                        <th scope="row">@contato.Id</th>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Celular</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-outline-primary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-outline-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="ConfirmExclusao">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>